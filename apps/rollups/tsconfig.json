{
    "extends": "tsconfig/nextjs.json",
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "compilerOptions": {
        "strict": false,
        "isolatedModules": true
    },
    "exclude": ["node_modules"],
    "include": [
        "additional.d.ts",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "next.config.js"
    ]
}
